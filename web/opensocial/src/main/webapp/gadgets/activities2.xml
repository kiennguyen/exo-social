<Module>
  <ModulePrefs  title="Status Update"
  				description="Status Update"
  				author_email="hoatlevan@gmail.com"
  				author_affiliation="eXo Platform">
  	<Locale messages="activities2/locale/ALL_ALL.xml" />
  	<Locale lang="en" messages="activities2/locale/en_ALL.xml" />
  	<Locale lang="vi" messages="activities2/locale/vi_ALL.xml" />
    <Require feature="opensocial-0.7" />
    <Require feature="dynamic-height" />
    <Require feature="settitle" />
    <Require feature="views" />
    <Require feature="minimessage" />
  </ModulePrefs>
  <Content type="html" view="default, home, profile">
  <![CDATA[
  	<link rel="stylesheet" type="text/css" href="activities2/style/style.css" />
  	<link rel="stylesheet" type="text/css" href="activities2/style/home.css" />
  	<script type="text/javascript" src="activities2/script/debug.js"></script>
  	<script type="text/javascript" src="activities2/script/ie-patch.js"></script>
  	<script type="text/javascript" src="activities2/script/eXo/social/Util.js"></script>
  	<script type="text/javascript" src="activities2/script/eXo/social/Locale.js"></script>
  	<script type="text/javascript" src="activities2/script/eXo/social/UIComposer.js"></script>
  	<script type="text/javascript" src="activities2/script/eXo/social/LinkShare.js"></script>
  	<script type="text/javascript" src="activities2/script/eXo/social/Like.js"></script>
  	<script type="text/javascript" src="activities2/script/eXo/social/StatusUpdate.js"></script>
  	<div id="StatusUpdate" class="ActivitiesComponent">
  		<div class="ActivitiesComponentBT">
  			<div class="ActivitiesTitleBarR">
  				<div id="AppTitle" class="ActivitiesTitleBarM">__MSG_title__</div>
  			</div>
  			<div class="ActivitiesContainer">
  				<div id="UIMyStatusInput" class="MyStatusComponent">
  					<table>
  						<body>
  							<tr>
  								<td width='45'>
  									<a href="#OwnerAvatar" class="MyStatusAvatarBG">
											<img id="ImgOwnerAvatar" src="http://localhost:8080/social/gadgets/activities2/style/images/MyStatusAvatar.gif" width="26" height="26" title="" alt="" />
										</a>
								</td>
  								<td width='100%'>
  									<div id="UIComposer" class="MyStatusInput">
											<div class="MyStatusInputTL">
												<div class="MyStatusInputTR">
													<div class="MyStatusInputTM"><span></span></div>
												</div>
											</div>
											<div class="MyStatusInputL">
												<div class="MyStatusInputML">
													<div class="MyStatusInputR">
														<div class="MyStatusInputM">
				  											<div style="height: 2px;"><span></span></div>
				  											<input type="text" id="UIComposerTextArea" class="Textbox" value="__MSG_what_are_you_doing__" />
				  									</div>
					 									<div id="UIComposerExtension" class="ExtensionInput">
					 										<!-- dynamic loading -->
						 								</div>
						 							</div>
												</div>
											</div>	
											<div class="MyStatusInputBL">
												<div class="MyStatusInputBR">
													<div class="MyStatusInputBM"><span></span></div>
												</div>
											</div>
										</div>	
  								</td>
  								<td width='30'>
  									<a id="UIComposerShareButton" href="#statusUpdate.share" title="__MSG_share__" class="IconAdd">&nbsp;</a>
  								</td>
  							</tr>
  						</body>
  					</table>	
  				</div>
  				
  				<div class="ATitleBarL">
  					<div class="ATitleBarR">
  						<div class="ATitleBarM">
  							<div id="OwnerActivityTitle" class="ATitleBarC">Owner's Activity</div>
  						</div>
  					</div>
  				</div>
  				<div id="UIOwnerAppendableRoot"> 
  					<!-- the root to append owner activities block -->
  				</div>
  				<div id="UIOwnerMore" class="DisplayNone">
  					<a href="#ownerMore">__MSG_more__</a>
  					<div class="ClearRight"><span /></div>
  				</div>
  				<div class="ClearRight"><span>&nbsp</span></div>
  				
  				<div class="ATitleBarL">
  					<div class="ATitleBarR">
  						<div class="ATitleBarM">
  							<div id="OwnerFriendsActivityTitle" class="ATitleBarC">__MSG_friends_activities__</div>
  						</div>
  					</div>
  				</div>
  				<div id="UIFriendsAppendableRoot"> 
  					<!-- the root to append friends activities block -->
  				</div>
  				<div id="UIFriendsMore" class="FloatRight DisplayNone"><a href="#friendsMore">__MSG_more__</a></div>
  				<div class="ClearRight"><span>&nbsp</span></div>
  			</div>
  		</div>
  	</div>
