  	<page-id>portal::@owner@::content</page-id>
  	<owner-type>portal</owner-type>
		<owner-id>@owner@</owner-id>
    <name>content</name>		
    <factory-id>Desktop</factory-id>
	  <access-permissions>Everyone</access-permissions>
	  <edit-permission>*:/platform/administrators</edit-permission>
    <show-max-window>true</show-max-window>
    
    <application>
	    <instance-id>portal#@owner@:/eXoWidgetWeb/WelcomeWidget/WelcomeWidget</instance-id>
	    <application-type>eXoWidget</application-type>
	    <title>Welcome Widget</title>
	  </application>

    <application>
      <instance-id>portal#@owner@:/web/IFramePortlet/blog</instance-id>    
      <title>Blog's Link</title>
      <show-info-bar>true</show-info-bar>
      <show-application-state>true</show-application-state>
      <show-application-mode>false</show-application-mode>
    </application>

    <application>
      <instance-id>portal#@owner@:/exoadmin/AccountPortlet/Account</instance-id>    
      <title>Account Portlet</title>
    </application>
  </page>

  <page>
  	<page-id>portal::@owner@::desktop</page-id>
  	<owner-type>portal</owner-type>
		<owner-id>@owner@</owner-id>  	
    <name>desktop</name>		
    <factory-id>Desktop</factory-id>
	  <access-permissions>*:/platform/guests</access-permissions>
	  <edit-permission>*:/platform/administrators</edit-permission>
    <show-max-window>true</show-max-window>

    <application>
      <instance-id>portal#@owner@:/web/IFramePortlet/blog</instance-id>    
