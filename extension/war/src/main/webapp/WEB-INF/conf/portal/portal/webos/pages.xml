<page-set>
  <page>
  	<page-id>portal::webos::home</page-id>
  	<owner-type>portal</owner-type>
		<owner-id>webos</owner-id>
    <name>home</name>		
    <factory-id>Desktop</factory-id>
	  <access-permissions>*:/platform/guests</access-permissions>
	  <edit-permission>manager:/platform/administrators</edit-permission>
    <show-max-window>true</show-max-window>
    
    <application>
	    <instance-id>portal#webos:/eXoWidgetWeb/WelcomeWidget/WelcomeWidget</instance-id>
	    <application-type>eXoWidget</application-type>
	    <title>Welcome Widget</title>
	  </application>
	  	                 
    <application>
      <instance-id>portal#webos:/exoadmin/AccountPortlet/Account</instance-id>    
      <title>Register</title>
    </application>
    
    <application>
      <instance-id>group#platform/guests:/web/IFramePortlet/blog</instance-id>
      <title>Blog's Link</title>
      <show-info-bar>true</show-info-bar>
      <show-application-state>true</show-application-state>
      <show-application-mode>false</show-application-mode>
    </application>
                
  </page>
  
  <page>
  	<page-id>portal::webos::livedesktop</page-id>
  	<owner-type>portal</owner-type>
		<owner-id>webos</owner-id>
    <name>livedesktop</name>		
    <factory-id>Desktop</factory-id>
	  <access-permissions>*:/platform/users</access-permissions>
	  <edit-permission>*:/platform/administrators</edit-permission>
    <show-max-window>true</show-max-window>
    
    <application location-x="100" location-y="150">
	    <instance-id>portal#webos:/eXoWidgetWeb/WelcomeWidget/WelcomeWidget</instance-id>
	    <application-type>eXoWidget</application-type>
	    <title>Welcome Widget</title>
	  </application>
	  
	  <application location-x="300" location-y="150">
	    <instance-id>portal#webos:/eXoWidgetWeb/CalendarWidget/CalendarWidget</instance-id>
	    <application-type>eXoWidget</application-type>
	    <title>Calendar Widget</title>
	  </application>	      
	      
    <application>
      <instance-id>portal#webos:/web/BrowserPortlet/Web Explorer</instance-id>    
      <title>Web Explorer</title>
    </application>
                
    <application>
      <instance-id>portal#webos:/web/IFramePortlet/blog</instance-id>
      <title>Blog</title>
      <show-info-bar>true</show-info-bar>
      <show-application-state>true</show-application-state>
      <show-application-mode>true</show-application-mode>
    </application>
    
    <application>
      <instance-id>portal#webos:/web/IFramePortlet/google</instance-id>
      <title>Google</title>
      <show-info-bar>true</show-info-bar>
      <show-application-state>true</show-application-state>
      <show-application-mode>true</show-application-mode>
    </application>
    
    <application>
      <instance-id>portal#webos:/web/IFramePortlet/facebook</instance-id>
      <title>FaceBook</title>
      <show-info-bar>true</show-info-bar>
      <show-application-state>true</show-application-state>
      <show-application-mode>true</show-application-mode>
    </application>
                    
  </page>  
   
</page-set>
