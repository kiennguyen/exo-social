<project>
  <parent>
      <groupId>org.exoplatform</groupId>
      <artifactId>parent</artifactId>
      <version>1.1.1</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.exoplatform.social</groupId>
  <artifactId>config</artifactId>
  <name>eXo Social Config</name>
  <version>1.0-alpha3-SNAPSHOT</version>
  <packaging>pom</packaging>

  <scm>
    <connection>scm:svn:http://svn.exoplatform.org/projects/social/1.0-alpha3-SNAPSHOT/</connection>
    <developerConnection>scm:svn:http://svn.exoplatform.org/projects/social/1.0-alpha3-SNAPSHOT/</developerConnection>
    <url>http://fisheye.exoplatform.org/browse/projects/social/1.0-alpha3-SNAPSHOT/</url>
  </scm>

  <issueManagement>
    <system>jira</system>
    <url>http://jira.exoplatform.org/browse/SOC</url>
  </issueManagement>

  <modules>
	<module>component/people</module>
	<module>component/opensocial</module>
	<module>web/portal</module>
	<module>web/resources</module>
  <module>web/opensocial</module>
	<module>portlet/space</module>
  <module>portlet/profile</module>
  <module>component/space</module>
	<module>webui/social</module>
	<module>application/rest</module>
  </modules>

  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
          <include>**/*.jstmpl</include>
        </includes>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration> <source>1.5</source><target>1.5</target><optimize>true</optimize></configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <warSourceExcludes>WEB-INF/lib/*.jar</warSourceExcludes>
          <archive>
             <manifestEntries>
               <SCM-Revision>${buildNumber}</SCM-Revision>
             </manifestEntries>
           </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestEntries>
              <SCM-Revision>${buildNumber}</SCM-Revision>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>${test.skip}</skip>
          <useFile>false</useFile>
          <forkMode>pertest</forkMode><!--once , pertest -->
          <testFailureIgnore>false</testFailureIgnore>
          <includes>
            <include implementation="java.lang.String">**/${test.classes}*.java</include>
          </includes>
          <systemProperties>
            <property>
              <name>maven.exoplatform.dir</name>
              <value>${exo.directory.base}/projects/exo-platform</value>
            </property>
            <property>
              <name>mock.portal.dir</name>
              <value>${exo.projects.directory.src}/portal/trunk/web/portal/src/main/webapp</value>
            </property>
            <property>
              <name>org.apache.commons.logging.Log</name>
              <value>org.apache.commons.logging.impl.SimpleLog</value>
            </property>
            <property>
              <name>org.apache.commons.logging.simplelog.defaultlog</name>
              <value>warn</value>
            </property>
            <property>
              <name>org.apache.commons.logging.simplelog.log.[eXo]</name>
              <value>warn</value>
            </property>
            <property>
              <name>org.apache.commons.logging.simplelog.log.net.hibernate</name>
              <value>warn</value>
            </property>
            <property>
              <name>java.naming.factory.initial</name>
              <value>org.exoplatform.services.naming.SimpleContextFactory</value>
            </property>
          </systemProperties>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>compile</id>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <copy failonerror="false" todir="${basedir}/target/${project.build.finalName}/WEB-INF/classes">
                  <fileset dir="${basedir}/src/main/webapp/WEB-INF/classes">
                    <include name="**/*_en.properties"/>
                  </fileset>
                  <globmapper from="*_en.properties" to="*.properties"/>
                </copy>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>buildnumber-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>validate</phase>
            <goals>
              <goal>create</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <doCheck>false</doCheck>
          <doUpdate>false</doUpdate>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <pluginRepositories>
      <pluginRepository>
          <id>mc-release</id>
          <name>Local Maven repository of releases</name>
          <url>http://mc-repo.googlecode.com/svn/maven2/releases</url>
          <snapshots>
              <enabled>false</enabled>
          </snapshots>
          <releases>
              <enabled>true</enabled>
          </releases>
      </pluginRepository>
  </pluginRepositories>


  <profiles>
    <profile>
        <id>release</id>
        <build>
          <plugins>
            <!-- Not enough javadoc to need this now -->
            <!--plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-javadoc-plugin</artifactId>
              <executions>
                <execution>
                  <id>attach-javadocs</id>
                  <goals>
                    <goal>jar</goal>
                  </goals>
                </execution>
              </executions>
            </plugin-->
            <plugin>
                <groupId>com.google.code.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <configuration>
                    <header>tools/header.txt</header>
                    <failIfMissing>true</failIfMissing>
                    <mapping>
                        <gtmpl>XML_STYLE</gtmpl>
                    </mapping>
                    <excludes>
                        <exclude>**/web.xml</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
          </plugins>
        </build>
    </profile>
  </profiles>
    <properties>
      <org.exoplatform.kernel.version>2.1.2</org.exoplatform.kernel.version>
      <org.exoplatform.core.version>2.2.2</org.exoplatform.core.version>
    	<org.exoplatform.ws.version>2.0.2</org.exoplatform.ws.version>
      <org.exoplatform.jcr.version>1.11.2</org.exoplatform.jcr.version>
      <org.exoplatform.pc.version>2.1.2</org.exoplatform.pc.version>
	    <org.shindig.version>SNAPSHOT-r790473</org.shindig.version>
      <org.exoplatform.portal.version>2.6-SNAPSHOT</org.exoplatform.portal.version>
	    <org.exoplatform.social.version>1.0-alpha3-SNAPSHOT</org.exoplatform.social.version>
      <test.classes>Test</test.classes>
      <test.skip>true</test.skip>
    </properties>
</project>

