<%
    def labelPendingSpaces = _ctx.appRes("${uicomponent.id}.label.pending_spaces")
    def labelActionRevokePending = _ctx.appRes("${uicomponent.id}.label.action_revoke_pending")
    def pendingSpaces = uicomponent.getPendingSpaces()
%>
<div>
    <div class="UIManagePendingSpaces" id="$uicomponent.id">
        <div class="PendingSpaceContainer">
            <div><%= labelPendingSpaces %></div>
        <%for (space in pendingSpaces) {
            def revokePendingAction = uicomponent.event("RevokePending", space.id) + "; return false"
        %>
            <div class="ContentSpace">
                <div class="SpaceIcon"></div>
                <div class="SpaceName"><%= space.name %></div>
                <div class="SpaceDescription"><%= space.description %></div>
                <div class="SpaceAction" onclick="<%= revokePendingAction %>"><a href="#RevokePending"><%= labelActionRevokePending %></a></div>
                <div class="Delimeter">______</div>
            </div>
        <%}%>
        </div>
    </div>
</div>