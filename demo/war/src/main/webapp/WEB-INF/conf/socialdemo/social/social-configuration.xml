<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_1.xsd http://www.exoplaform.org/xml/ns/kernel_1_1.xsd"
   xmlns="http://www.exoplaform.org/xml/ns/kernel_1_1.xsd">
  <component>
   <key>org.exoplatform.portal.gadget.core.SecurityTokenGenerator</key>
   <type>org.exoplatform.social.opensocial.auth.ExoSocialSecurityTokenGenerator</type>
  </component>
  
  <component>
      <key>org.exoplatform.social.common.jcr.SocialDataLocation</key>
      <type>org.exoplatform.social.common.jcr.SocialDataLocation</type>
      <init-params>
        <value-param>
          <name>workspace</name>
          <description>workspace for Social data</description>
          <value>social</value>
        </value-param>
      </init-params>
  </component>

  <component>
    <key>org.exoplatform.social.webui.activity.UIActivityFactory</key>
    <type>org.exoplatform.social.webui.activity.UIActivityFactory</type>
  </component>

  <component>
    <key>org.exoplatform.social.webui.composer.UIActivityComposerManager</key>
    <type>org.exoplatform.social.webui.composer.UIActivityComposerManager</type>
    <init-params>
      <value-param>
        <name>DEFAULT_ACTIVITY_COMPOSER</name>
        <value>org.exoplatform.social.portlet.composers.UIDefaultActivityComposer</value>
      </value-param>
    </init-params>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.social.webui.activity.UIActivityFactory</target-component>
    <component-plugin>
      <name>register.ui.activity</name>
      <set-method>registerUIActivity</set-method>
      <type>org.exoplatform.social.webui.activity.UIActivityPlugin</type>
      <init-params>
        <values-param>
          <name>default activity</name>
          <value>DEFAULT_ACTIVITY</value>
          <value>org.exoplatform.social.webui.activity.default_.UIDefaultActivity</value>
          <value>org.exoplatform.social.webui.activity.default_.DefaultUIActivityBuilder</value>
        </values-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>register.ui.activity</name>
      <set-method>registerUIActivity</set-method>
      <type>org.exoplatform.social.webui.activity.UIActivityPlugin</type>
      <init-params>
        <values-param>
          <name>space auto-created activity</name>
          <value>exosocial:spaces</value>
          <value>org.exoplatform.social.webui.activity.default_.UIDefaultActivity</value>
          <value>org.exoplatform.social.webui.activity.default_.DefaultUIActivityBuilder</value>
        </values-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>register.ui.activity</name>
      <set-method>registerUIActivity</set-method>
      <type>org.exoplatform.social.webui.activity.UIActivityPlugin</type>
      <init-params>
        <values-param>
          <name>for testing only</name>
          <value>testType</value>
          <value>org.exoplatform.social.webui.activity.link.UILinkActivity</value>
          <value>org.exoplatform.social.webui.activity.link.UILinkActivityBuilder</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.social.webui.composer.UIActivityComposerManager</target-component>
    <component-plugin>
      <name>register.activity.composer</name>
      <set-method>registerActivityComposer</set-method>
      <type>org.exoplatform.social.webui.composer.UIActivityComposerPlugin</type>
      <init-params>
        <value-param>
          <name>ComposerClass</name>
          <value>org.exoplatform.social.portlet.composers.UILinkActivityComposer</value>
        </value-param>
        <values-param>
          <name>ComposerConfig</name>
          <value>http://findicons.com/files/icons/1581/silk/16/chart_pie_link.png</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
