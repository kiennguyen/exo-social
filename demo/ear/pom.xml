<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.exoplatform.social</groupId>
    <artifactId>sc</artifactId>
    <version>1.0-Beta02-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>exo.social.demo.ear</artifactId>
  <packaging>ear</packaging>
  <name>GateIn Portal Social Demo Ear</name>
  <url>http://www.exoplatform.org</url>
  <description>GateIn Social Portal Ear</description>

  <dependencies>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.demo.config</artifactId>
      <version>${org.exoplatform.social.version}</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.demo.jar</artifactId>
      <version>${org.exoplatform.social.version}</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.application.rest</artifactId>
      <version>${org.exoplatform.social.version}</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.component.opensocial</artifactId>
      <version>${org.exoplatform.social.version}</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.component.people</artifactId>
      <version>${org.exoplatform.social.version}</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.component.space</artifactId>
      <version>${org.exoplatform.social.version}</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.portlet.profile</artifactId>
      <version>${org.exoplatform.social.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.portlet.space</artifactId>
      <version>${org.exoplatform.social.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.web.opensocial</artifactId>
      <version>${org.exoplatform.social.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.web.socialResources</artifactId>
      <version>${org.exoplatform.social.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.webui.social</artifactId>
      <version>${org.exoplatform.social.version}</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.demo.rest-war</artifactId>
      <version>${org.exoplatform.social.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>exo.social.demo.war</artifactId>
      <version>${org.exoplatform.social.version}</version>
      <type>war</type>
    </dependency>
  </dependencies>
  
  <build>
    <finalName>social-demo</finalName>  
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
        	<defaultLibBundleDir>lib</defaultLibBundleDir>
           <modules>
             <jarModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.demo.config</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
             <webModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.demo.war</artifactId>
               <contextRoot>socialdemo</contextRoot>
             </webModule>
             <webModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.demo.rest-war</artifactId>
               <contextRoot>rest-socialdemo</contextRoot>
             </webModule>
             <jarModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.demo.jar</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
             <jarModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.application.rest</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
             <jarModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.component.opensocial</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
             <jarModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.component.people</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
             <jarModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.component.space</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
             <webModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.portlet.profile</artifactId>
               <contextRoot>profile</contextRoot>
               <bundleFileName>profile.war</bundleFileName>
             </webModule>
             <webModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.portlet.space</artifactId>
               <contextRoot>space</contextRoot>
               <bundleFileName>space.war</bundleFileName>
             </webModule>
             <webModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.web.opensocial</artifactId>
               <contextRoot>social</contextRoot>
               <bundleFileName>social.war</bundleFileName>
             </webModule>
             <webModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.web.socialResources</artifactId>
               <contextRoot>eXoResourcesSocial</contextRoot>
               <bundleFileName>eXoResourcesSocial.war</bundleFileName>
             </webModule>
             <jarModule>
               <groupId>org.exoplatform.social</groupId>
               <artifactId>exo.social.webui.social</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
