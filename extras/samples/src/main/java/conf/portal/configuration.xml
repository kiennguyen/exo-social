<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_1.xsd http://www.exoplaform.org/xml/ns/kernel_1_1.xsd"
   xmlns="http://www.exoplaform.org/xml/ns/kernel_1_1.xsd">
  <external-component-plugins>
    <target-component>org.exoplatform.social.core.manager.ActivityManager</target-component>
    <component-plugin>
      <name>MentionsProcessor</name>
      <set-method>addProcessorPlugin</set-method>
      <type>org.exoplatform.social.activity.MentionsProcessor</type>
      <init-params>
        <value-param>
          <name>priority</name>
          <description>priority of this processor (lower are executed first)</description>
          <value>10</value>
        </value-param>
      </init-params>
    </component-plugin>
    <!--
    <component-plugin>
      <name>GoogleMapProcessor</name>
      <set-method>addProcessorPlugin</set-method>
      <type>org.exoplatform.social.activity.GoogleMapProcessor</type>
      <init-params>
        <value-param>
          <name>priority</name>
          <description>priority of this processor (lower are executed first)</description>
          <value>1</value>
        </value-param>
        <value-param>
          <name>key</name>
          <description>your google map API key</description>
          <value>xxx</value>
        </value-param>
      </init-params>
    </component-plugin>
    -->
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.social.webui.activity.UIActivityFactory</target-component>
    <component-plugin>
      <name>register.ui.activity</name>
      <set-method>registerUIActivity</set-method>
      <type>org.exoplatform.social.webui.activity.UIActivityPlugin</type>
      <init-params>
        <values-param>
          <name>emotion activity</name>
          <value>EMOTION_ACTIVITY</value>
          <value>org.exoplatform.social.extras.samples.activity.UIEmotionActivity</value>
          <value>org.exoplatform.social.extras.samples.activity.UIEmotionActivityBuilder</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.social.webui.composer.UIActivityComposerManager</target-component>
    <component-plugin>
      <name>register.activity.composer</name>
      <set-method>registerActivityComposer</set-method>
      <type>org.exoplatform.social.webui.composer.UIActivityComposerPlugin</type>
      <init-params>
        <value-param>
          <name>ComposerClass</name>
          <value>org.exoplatform.social.extras.samples.activity.UIEmotionActivityComposer</value>
        </value-param>
        <values-param>
          <name>ComposerConfig</name>
          <value>http://l.yimg.com/us.yimg.com/i/mesg/emoticons7/1.gif</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>